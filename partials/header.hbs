<header class="site-header">
  <div class="container header-inner">
    <a class="brand" href="{{@site.url}}">{{@site.title}}</a>

    {{#if @site.navigation}}
      <nav class="site-nav" role="navigation">
        <ul>
          {{#foreach navigation}}
            <li class="nav-item {{#if current}}is-active{{/if}}">
              <a href="{{url}}">{{label}}</a>
            </li>
          {{/foreach}}
        </ul>
      </nav>
    {{/if}}
  </div>
</header>
